{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Trace",
  "type": "object",
  "required": ["trace_id", "timestamp", "steps"],
  "properties": {
    "trace_id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "status"],
        "properties": {
          "name": { "type": "string" },
          "status": { "type": "string" },
          "details": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
