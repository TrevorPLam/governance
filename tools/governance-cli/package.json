{
  "name": "@trevorplam/governance-cli",
  "version": "1.0.0",
  "description": "CLI tool for AI-Native repository governance - automates governance injection, validation, and verification",
  "main": "dist/cli.js",
  "bin": {
    "governance": "./bin/governance",
    "governance-cli": "./bin/governance"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "governance",
    "repository-governance",
    "ai-native",
    "cli",
    "automation",
    "code-quality",
    "policy",
    "compliance",
    "boundaries",
    "agent-framework"
  ],
  "author": "Trevor P Lam",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TrevorPLam/governance.git",
    "directory": "tools/governance-cli"
  },
  "bugs": {
    "url": "https://github.com/TrevorPLam/governance/issues"
  },
  "homepage": "https://github.com/TrevorPLam/governance#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
